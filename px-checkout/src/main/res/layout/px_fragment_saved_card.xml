<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/px_m_margin"
        app:cardBackgroundColor="#de1a3a83"
        app:cardCornerRadius="@dimen/px_xs_margin"
        app:cardElevation="2dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="1">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/px_card_back_shadow"/>
                </FrameLayout>

            </LinearLayout>


            <!-- card content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/px_s_margin"
                    android:layout_weight="0.4">

                    <FrameLayout
                        android:id="@+id/mpsdkBaseImageCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:src="@drawable/px_base_card_image"/>

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/mpsdkImageCardContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"/>

                </FrameLayout>


                <com.mercadopago.android.px.internal.view.MPTextView
                    android:id="@+id/card_number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/px_s_margin"
                    android:layout_weight="0.25"
                    android:gravity="bottom"
                    android:maxLength="40"
                    android:shadowColor="@color/px_base_text"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:textColor="@color/white"
                    app:autoSizeMaxTextSize="24dp"
                    app:autoSizeMinTextSize="10dp"
                    app:autoSizeStepGranularity="1dp"
                    app:autoSizeTextType="uniform"
                    app:font_style="mono_regular"
                    tools:text="1234 1234 1234 1234"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/px_xs_margin"
                    android:layout_weight="0.25"
                    android:weightSum="1"
                    android:orientation="horizontal">

                        <com.mercadopago.android.px.internal.view.MPTextView
                            android:id="@+id/card_holder_name"
                            android:layout_width="0dp"
                            android:layout_marginLeft="@dimen/px_s_margin"
                            android:layout_marginStart="@dimen/px_xs_margin"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/px_cardholder_name_short"
                            android:shadowColor="@color/px_base_text"
                            android:shadowDy="2"
                            android:shadowRadius="2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/px_xs_text"
                            app:autoSizeMaxTextSize="24dp"
                            app:autoSizeMinTextSize="10dp"
                            app:autoSizeStepGranularity="1dp"
                            app:autoSizeTextType="uniform"
                            app:font_style="mono_regular"/>

                    <com.mercadopago.android.px.internal.view.MPTextView
                        android:id="@+id/exp_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_s_margin"
                        android:layout_marginStart="@dimen/px_xs_margin"
                        android:layout_weight="0.4"
                        android:shadowColor="@color/px_base_text"
                        android:shadowDy="2"
                        android:shadowRadius="2"
                        android:textColor="@color/white"
                        app:autoSizeMaxTextSize="24dp"
                        app:autoSizeMinTextSize="10dp"
                        app:autoSizeStepGranularity="1dp"
                        app:autoSizeTextType="uniform"
                        app:font_style="mono_regular"
                        tools:text="MM/YY"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>