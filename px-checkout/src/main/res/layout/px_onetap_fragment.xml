<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/px_white">

    <LinearLayout
        android:id="@+id/linear_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/px_transparent"
            android:elevation="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:elevation="0dp">

            <ViewSwitcher
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ViewStub
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout="@layout/px_adapter_issuer"/>

                <com.mercadopago.android.px.internal.view.ElementDescriptorView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:px_element_icon_height="?attr/actionBarSize"
                    app:px_element_icon_width="?attr/actionBarSize"
                    app:px_element_label_size="@dimen/px_l_text"/>

            </ViewSwitcher>
        </android.support.v7.widget.Toolbar>

        <com.mercadopago.android.px.internal.view.SummaryView
            android:id="@+id/summary_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/px_xxs_margin"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/payment_method_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.mercadopago.android.px.internal.view.ScrollingPagerIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:px_spi_dotColor="#19000000"
            app:px_spi_dotSelectedColor="#3483fa"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/exploding_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</FrameLayout>

